<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Banku_baten_Kudeaketa.MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <VerticalStackLayout Grid.Column="0" Spacing="20" Margin="20">
            <Label x:Name="LblBezero" Text="Bezeroa"/>
            <Picker x:Name="PkrNAN"/>
            <Label x:Name="LblDepositua" Text="Depositua"/>
            <ListView x:Name="LvDeskripzioaDepositua"/>
            <Button x:Name="BtnDeposituaAldatu" Text="Aldatu depositua"/>
            <Button x:Name="BtnImprimatu" Text="Inprimatu"/>
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Column="1" Spacing="20" Margin="20">
            <Label x:Name="LblIzena" Text="Izena"/>
            <Entry x:Name="EtyIzena"/>
            <Label x:Name="LblMailegua" Text="Mailegua"/>
            <ListView x:Name="LvDeskripzioaMailegua"/>
            <Button x:Name="BtnMaileguaEzeztatu" Text="Mailegua ezeztatu"/>
            <Button x:Name="BtnIrten" Text="Irten"/>
        </VerticalStackLayout>

    </Grid>

</ContentPage>
