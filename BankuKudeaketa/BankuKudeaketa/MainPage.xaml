<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankuKudeaketa.MainPage" 
             Background="Gray"
             xmlns:views="clr-namespace:BankuKudeaketa.Views">

    <VerticalStackLayout>
        <HorizontalStackLayout Background="LightGray" HeightRequest="100">

            <Button x:Name="ButtonBezeroak" Text="Bezeroak" Clicked="ButtonBezeroak_Clicked" Margin="20,0,10,0" WidthRequest="100"/>
            <Button x:Name="ButtonKontuak" Text="Kontuak" Clicked="ButtonKontuak_Clicked" Margin="10" WidthRequest="100"/>
            <Button x:Name="ButtonIrten" Text="Irten" Clicked="ButtonIrten_Clicked" Margin="10" WidthRequest="100"/>
            
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
