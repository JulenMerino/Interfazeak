<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv ="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ArgazkiKamera.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">

            <cv:CameraView x:Name="KameraView" WidthRequest="300" HeightRequest="300" CamerasLoaded="KameraView_CamerasLoaded"/>

            <Button x:Name="ArgazkiaAtera" Text="Argazkia"  Clicked="ArgazkiaAtera_Clicked"/>

            <Image x:Name="KameraIrudia" WidthRequest="200" HeightRequest="200"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
