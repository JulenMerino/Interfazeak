<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankuBatenKudeaketa.Gordailua">

    <StackLayout Padding="20">

        <!-- Deskribapenaren sarrera -->
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="0,20,0,10">
            <Label Text="Deskribapena:" Margin="0,10,10,0"/>
            <Entry x:Name="etyDeskribapena" IsReadOnly="True" WidthRequest="200"/>
        </HorizontalStackLayout>

        <!-- Saldoaren sarrera -->
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Margin="10">
            <Label Text="Saldo:" Margin="0,10,10,0"/>
            <Entry x:Name="etySaldo" Keyboard="Numeric" WidthRequest="200"/>
        </HorizontalStackLayout>

        <!-- Botoiak: Modifikatu, Ezabatu eta Itxi -->
        <HorizontalStackLayout HorizontalOptions="CenterAndExpand" Spacing="10">
            <Button Text="Aldatu" Clicked="Aldatu_Clicked"/>
            <Button Text="Ezabatu" Clicked="Ezabatu_Clicked" />
            <Button Text="Itxi" Clicked="Itxi_Clicked" />
        </HorizontalStackLayout>
    </StackLayout>
</ContentPage>
